@model SGHR.Application.Dtos.Usuario.SaveUsuarioDto

@{
    ViewData["Title"] = "Crear Usuario";
}

<h2>Crear Usuario</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NombreCompleto" class="control-label"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Correo" class="control-label"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdRolUsuario" class="control-label">Rol</label>
        <select asp-for="IdRolUsuario" asp-items="ViewBag.IdRolUsuario" class="form-control"></select>
        <span asp-validation-for="IdRolUsuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-check-input" type="checkbox" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>