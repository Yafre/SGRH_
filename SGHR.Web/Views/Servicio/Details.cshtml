@model SGHR.Application.Dtos.Servicio.ServicioDto

@{
    ViewData["Title"] = "Detalles del Servicio";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3 fw-bold">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.Estado ? "success" : "secondary")">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </span>
            </dd>
        </dl>
        <hr />
        <a asp-action="Index" class="btn btn-secondary">← Volver al listado</a>
    </div>
</div>
