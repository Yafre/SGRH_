@model SGHR.Model.Model.ClienteGetModel

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <strong>¿Estás segura que deseas eliminar este cliente?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.NombreCompleto</dd>

    <dt class="col-sm-3">Correo</dt>
    <dd class="col-sm-9">@Model.Correo</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@(Model.Estado ? "Activo" : "Inactivo")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdCliente" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
