@model SGHR.Application.Dtos.Habitacion.HabitacionDto

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>¿Estás segura que deseas eliminar esta habitación?</strong>
</div>

<hr />

<dl class="row">
    <dt class="col-sm-3">Número</dt>
    <dd class="col-sm-9">@Model.Numero</dd>

    <dt class="col-sm-3">Detalle</dt>
    <dd class="col-sm-9">@Model.Detalle</dd>

    <dt class="col-sm-3">Precio</dt>
    <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@(Model.Estado ? "Activa" : "Inactiva")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="IdHabitacion" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

