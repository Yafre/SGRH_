@model SGHR.Application.Dtos.Habitacion.HabitacionDto

@{
    ViewData["Title"] = "Detalles de Habitación";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-3 fw-bold">Número</dt>
    <dd class="col-sm-9">@Model.Numero</dd>

    <dt class="col-sm-3 fw-bold">Detalle</dt>
    <dd class="col-sm-9">@Model.Detalle</dd>

    <dt class="col-sm-3 fw-bold">Precio</dt>
    <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

    <dt class="col-sm-3 fw-bold">Estado</dt>
    <dd class="col-sm-9">
        <span class="badge bg-@(Model.Estado ? "success" : "secondary")">
            @(Model.Estado ? "Activa" : "Inactiva")
        </span>
    </dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">← Volver al listado</a>
